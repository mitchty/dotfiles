#!/usr/bin/env perl
#-*-mode: Perl; coding: utf-8;-*-
use strict;
use warnings;
use POSIX qw(strftime);

my $now       = time;
my $local_now = localtime $now;
my $tz        = strftime '%z', $local_now;
$tz =~ s/(\d{2})(\d{2})/$1:$2/smx;
my $time = strftime '%Y-%m-%dT%H:%M:%S', $local_now;
print "$time$tz\n";
exit 0;
